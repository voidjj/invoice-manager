<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1><%= (defined?(custom_text) && custom_text)  || page_title %></h1>
    </div>
    <% if defined? new_button && new_button %>
    <div class="col-sm">
      <div class="float-right">
        <%= button_to new_resource_name, new_polymorphic_url(resource),
          class: "btn btn-success", method: :get %>
      </div>
    </div>
    <% end %>
  </div>
</div>
